#include <stdint.h>

int main(void)
{
	uint32_t *pClkCtrlreg = (uint32_t*)0x40023830;
	uint32_t *pPortDModeReg = (uint32_t*)0x40023830;
	uint32_t *pPortDOutReg = (uint32_t*)0x40023830;

	// 1. enable the clock for GPOID peripheral in the AHB1ENR
	*pClkCtrlreg |= 0x08;

	// 2. Configure the mode of the IO pin as output
	// a. clear the 24th and 25th bit positions (CLEAR)
	*pPortDModeReg &= 0xFCFFFFF;
	// b. make 24th bit position as 1 (SET)
	*pPortDModeReg |= 0x01000000;

	// 3. SET 12th bit of the output data register to make I/O pin-12 as HIGH
	*pPortDOutReg |= 0x1000;


	/* Loop forever */
	while(1);
}
